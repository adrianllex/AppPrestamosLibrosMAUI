<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPrestamosLibrosMAUI.Views.UsuariosPage"
             Title="Registrar Usuario">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Campo para nombre -->
            <Entry x:Name="nombreEntry" Placeholder="Nombre del usuario" />

            <!-- Selector de tipo -->
            <Picker x:Name="tipoPicker" Title="Tipo de usuario" />

            <!-- BotÃ³n para guardar -->
            <Button Text="Guardar Usuario" Clicked="OnGuardarUsuarioClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
