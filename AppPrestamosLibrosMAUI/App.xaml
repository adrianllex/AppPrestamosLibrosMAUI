<?xml version="1.0" encoding="UTF-8" ?>
<Application 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppPrestamosLibrosMAUI"
    xmlns:converters="clr-namespace:AppPrestamosLibrosMAUI.Converters"
    x:Class="AppPrestamosLibrosMAUI.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Estilos existentes -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 🔄 Converters globales -->
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:NullToInverseBoolConverter x:Key="NullToInverseBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>

